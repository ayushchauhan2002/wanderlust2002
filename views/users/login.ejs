<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <h1 class="col-6  offset-3 mt-4">Login  <i class="fa-solid fa-key"></i></h1>
    <div class="col-6 offset-3">
      <div class="col-md-8 col-lg-7 col-xl-6">
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
          class="img-fluid" alt="Phone image">
      </div>
        <form action="/login" method="POST" class="needs-validation" novalidate>
            <div class="mb-3 mt-3">
                <label for="username" class="form-label"><span class="far fa-user p-2"></span>Username</label>
                <input name="username" 
                id="username"
                type="text" class="form-control"
                required
                />
              </div>
              <div class="mb-3 ">
                <label for="password" class="form-label"><span class="fas fa-lock p-2"></span>Password</label>
                <input name="password" 
                id="password"
                type="password" class="form-control"
                required
                />
              </div>
              <div class="d-flex justify-content-around align-items-center mb-4">
                <!-- Checkbox -->
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" value="" id="form1Example3" checked />
                  <label class="form-check-label" for="form1Example3"> Remember me </label>
                </div>
                <a href="#!">Forgot password?</a>
              </div>
              <button class="btn btn-primary btn-lg btn-block mb-4" style="padding-left: 2.5rem; padding-right: 2.5rem;"">Login</button>
              <div class="text-center">
                <p>Don't have an account? <a href="/signup" class="link-danger">Sign Up</a></p>
              </div>
        </form>
    </div>
</div>